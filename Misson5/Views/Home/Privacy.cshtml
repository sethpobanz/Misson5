@{
    ViewData["Title"] = "Toyota Tundra";
}
<h1>Calculate Your Cost</h1>

<label for="hours">Enter the number of hours:</label>
<input type="number" id="hours" min="0" required>

<label for="rate">Hourly rate:</label>
<input type="text" id="rate" value="$25" readonly>

<button id="calculateBtn">Calculate Total</button>

<label for="total">Total:</label>
<input type="text" id="total" readonly>
